<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="CommonTextStyle" parent="@android:style/TextAppearance">
        <item name="hintTextAppearance">@style/CommonTextAppearance</item>
        <item name="android:textColorHint">@color/secondaryText</item>
    </style>

    <style name="CommonTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/text_size_common</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="SubTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/text_size_sub_title</item>
    </style>


</resources>
